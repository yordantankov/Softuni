using System;

namespace _04._Even_Powers_of_2
{
    class Program
    {
        static void Main(string[] args)
        {
            //буква       a   e   i   o   u
            //стойност    1   2   3   4   5

            string text = Console.ReadLine();
            int sum = 0;

            for (int i = 0; i < text.Length; i++)
            {
                char symbol = text[i];
                if (symbol == 'a')
                {
                    sum += 1;
                }
                else if (symbol == 'e')
                {
                    sum += 2;
                }
                else if (symbol == 'i')
                {
                    sum += 3;
                }
                else if (symbol == 'o')
                {
                    sum += 4;
                }
                else if (symbol == 'u')
                {
                    sum += 5;
                }
            }
            Console.WriteLine(sum);
        }
    }
}
